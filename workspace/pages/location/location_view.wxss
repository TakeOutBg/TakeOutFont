.header{
  display: flex;
  height: 60rpx;
  font-size: 28rpx;
  padding: 15rpx 20rpx;
  line-height: 60rpx;
  border-bottom: 20rpx solid #F4F4F4;
}
.header .search-input{
  height: 60rpx;
  flex: 1;
  padding-left: 30rpx;
  background: #EFEFF5;
  border-radius: 10rpx;
  color: #6D6D6D;
}
.header .search-btn{
  text-align: center;
  margin-left: 20rpx;
  width: 100rpx;
  background: #AAAAAA;
  border-radius: 10rpx;
  color: #EBEBEB;
}
.getLocation{
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-bottom: 20rpx solid #F4F4F4;
}
.addLocation{
  position: relative;
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 15rpx;
}
.addLocation-icon{
  width: 30rpx;
  line-height: 27rpx;
  height: 30rpx;
  text-align: center;
  position: absolute;
  right: 15rpx;
  top: 20rpx;
  border-radius: 30rpx; 
  color: #FFD671;
  border:2px solid #FFD671;
}
.myLocation{
  height: 60rpx;
  padding-left: 15rpx;
  font-size: 25rpx;
}
.result-container{
  position: fixed;
  top: 90rpx;
  bottom: 0;
  right: 0;
  left: 0;
  z-index: 1000;
  background: white;
}
.search-result-list{
  padding: 15rpx;
  height: 100%;
}
.search-result{
  line-height: 50rpx;
  height: 100rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid #ECECEC;
}
.search-result-desc{
  line-height: 45rpx;
  font-size: 27rpx;
  color: #AAAAAA;
}
.location-detail{
  height: 60px;
  border-top: 1px solid #ccc; 
}
.location-detail:last-child{
  border-bottom: 1px solid #ccc; 
}
.location-detail-info,.location-detail-address{
  height: 30px;
  line-height: 30px;
}
.location-detail-view{
  height: 60px;
  width: calc(100% - 100px);
  width: -moz-calc(100% - 100px);
  width: -webkit-calc(100% - 100px);
  float: left;
}

.location-detail text{
  display: inline-block;
  margin-right: 20px;
  font-size: 14px;
}
.location-detail text:first-child{
  color: black;
  font-weight: bold;
  font-size: 16px;
}
.location-detail-address{
  font-size: 12px;
  color: #ccc;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden
}

.location-detail-edit{
  width: 100px;
  float: left;
  height: 60px;
  text-align: center;
}
.location-detail-edit image{
  width: 36px;
  height: 36px;
  margin-top: 12px; 
}
.is_default{
  background: #5cb85c !important;
  color: white !important;
  margin-right: 0 !important;
  font-size: 12px !important;
  padding:0 10px;
  line-height:20px; 
  border-radius:5px;
}